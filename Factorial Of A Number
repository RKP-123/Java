package pkg_1;

import java.util.Scanner;

public class Factorial {
	
    public static void main(String[] args) {

    	System.out.println("Enter a number");
    	Scanner s=new Scanner(System.in);
    	int num=s.nextInt();
    	
        int i = 1;
        long factorial = 1;
        while(i <= num)
        {
            factorial *= i;
            i++;
        }
        System.out.printf("Factorial of " +num+ "=" +factorial);
    }

}
